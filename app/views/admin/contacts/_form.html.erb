<%= simple_form_for @contact, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@contact[:name]) %>
  <%= f.input :email %>
  <%= error_span(@contact[:email]) %>
  <%= f.input :subject %>
  <%= error_span(@contact[:subject]) %>
  <%= f.input :phone %>
  <%= error_span(@contact[:phone]) %>
  <%= f.input :mobile %>
  <%= error_span(@contact[:mobile]) %>
  <%= f.input :message %>
  <%= error_span(@contact[:message]) %>
  <%= f.input :status %>
  <%= error_span(@contact[:status]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                contacts_path, :class => 'btn btn-default' %>
<% end %>
