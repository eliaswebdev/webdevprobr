<%= simple_form_for [:admin, @user] do |f| %>
  <%= f.input :email %>
  <%= f.association :roles, as: :check_boxes %>


  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_users_path, :class => 'btn btn-default' %>
<% end %>
