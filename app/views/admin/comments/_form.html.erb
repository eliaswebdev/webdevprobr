<%= simple_form_for [:admin, @comment], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :post_id %>
  <%= f.input :name %>
  <%= f.input :email %>
  <%= f.input :content %>
  <%= f.input :ip %>
  <%= f.input :status %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_comments_path, :class => 'btn btn-default' %>
<% end %>
