<h1>Categories</h1>


<table border="1" width="100%">
	<thead>
		<tr>
			<th>ID</th>
			<th>NAME</th>
		</tr>
	</thead>

	<tbody>
		<% @categories.each do |category| %>
		<tr>
			<td><%= category.id -%></td>
			<td><%= category.name -%></td>
		</tr>
		<% end %>
	</tbody>

	<tfoot>
		<tr>
			<th>Total</th>
			<th><%= @categories.size %></th>
		</tr>
	</tfoot>
</table>