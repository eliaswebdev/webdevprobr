<div class="page-header">
  <%= link_to 'New Page', new_page_path, class: 'btn btn-primary pull-right' %>
  <h1>Listing Pages</h1>
</div>


<table class='table table-hover table-bordered'>
  <thead>
    <tr>
      <th>ID</th>
      <th>title</th>
      <th>content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.id -%></td>
        <td><%= page.title -%></td>
        <td><%= page.content -%></td>
        <td><%= link_to 'Show', page, class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Edit', edit_page_path(page), class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


